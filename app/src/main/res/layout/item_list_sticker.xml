<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:layout_marginHorizontal="4dp"
    android:background="@drawable/bg_item_list_sticker">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:backgroundTint="@color/tranf"
        app:cardCornerRadius="10dp"
        app:strokeColor="@color/white"
        app:cardElevation="0dp"
        app:strokeWidth="2dp">

        <ImageView
            android:id="@+id/imvBackgound"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />
        <ImageView
            android:id="@+id/imvImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />
        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/sflShimmer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:shimmer_auto_start="true"
            app:shimmer_duration="1800"
            app:shimmer_base_alpha="0.7"
            app:shimmer_highlight_alpha="0.6"
            app:shimmer_direction="left_to_right"
            app:shimmer_shape="linear">
            <!-- View nền để shimmer quét qua -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#818181" />
        </com.facebook.shimmer.ShimmerFrameLayout>
    </com.google.android.material.card.MaterialCardView>

</FrameLayout>
